<div class="modal fade" id="teamCreateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="teamCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-2 me-3" id="teamCreateModalLabel">Start A New Post</h1>
                <small class="fst-italic text-muted pt-1">Find a new team !</small>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- TODO: Game Name -->
                <div>
                    <label class="fs-4 fw-bold mb-1" for="gameNameDataList">Game Name<i
                            class="bi bi-joystick mx-2"></i></label>
                    <input type="text" class="form-control form-control-lg w-75" list="gameNameOptions"
                        id="gameNameDataList" placeholder="Type to search..." @bind="GameName">
                    <datalist id="gameNameOptions">
                        <option value="APEX" />
                        <option value="CS:GO"/>
                        <option value="Destiny 2" />
                        <option value="Minecraft" />
                        <option value="NBA 2K23" />
                    </datalist>
                </div>
                <!-- TODO: Match Type -->
                <div class="mt-3">
                    <label class="fs-4 fw-bold mb-1" for="matchTypeDataList">Match Type<i
                            class="bi bi-boxes mx-2"></i></label>
                    <input type="text" class="form-control w-50" list="matchTypeOptions" id="matchTypeDataList"
                        placeholder="Type to search...">
                    <datalist id="matchTypeOptions">
                        <option value="PvP" />
                        <option value="PvE" />
                        <option value="Raid" />
                        <option value="TDM" />
                        <option value="Campaign" />
                    </datalist>
                </div>
                <!-- TODO: Team's Number -->
                <div class="d-inline-flex flex-wrap mt-3 column-gap-4">
                    <div class="row">
                        <label class="col-form-label col-form-label-sm col-sm-auto fs-4 fw-bold"
                            for="requirePersonNum">Required
                            People:<i class="bi bi-person-fill mx-2"></i></label>
                        <div class="col-sm-auto align-self-center">
                            <input class="form-control form-control-sm" type="number" name="createNewPost"
                                id="requirePersonNum" value="1" min="1" max="99" required style="width: 4rem;">
                        </div>
                    </div>
                    <div class="vr"></div>
                    <div class="row">
                        <label class="col-form-label col-form-label-sm col-sm-auto fs-4 fw-bold"
                            for="currentPersonNum">Current
                            People: <i class="bi bi-person-check-fill mx-2"></i></label>
                        <div class="col-sm-auto align-self-center">
                            <input class="form-control form-control-sm" type="number" name="createNewPost"
                                id="currentPersonNum" value="1" min="1" max="99" required style="width: 4rem;">
                        </div>
                    </div>
                    <div class="fst-italic text-danger">Current player number doesn't match the required number !
                    </div>
                </div>
                <!-- TODO: Requirements -->
                <div class="mt-3">
                    <label class="fs-4 fw-bold mb-1" for="createRequirementAdd">Requirements<i
                            class="bi bi-card-checklist mx-2"></i></label>
                    <div class="d-flex gap-2">
                        <!-- created requirement -->
                        <div class="d-inline-flex border border-3 border-dark-subtle rounded-5">
                            <input
                                class="form-control form-control-sm rounded-start-4 text-center form-control-plaintext"
                                type="text" name="createRequirement" id="createRequirement0" placeholder="Necessity"
                                value="High IQ" aria-label="team requirement" style="max-width: 6rem;" disabled
                                readonly>
                            <div class="d-inline-flex align-items-center">
                                <button type="button" class="btn btn-light btn-sm rounded-end-4" aria-label="Delete"><i
                                        class="bi bi-x-lg pe-1"></i></button>
                            </div>
                        </div>
                        <div class="d-inline-flex border border-3 border-dark-subtle rounded-5">
                            <input
                                class="form-control form-control-sm rounded-start-4 text-center form-control-plaintext"
                                type="text" name="createRequirement" id="createRequirement1" placeholder="Necessity"
                                value="Not Toxic" aria-label="team requirement" style="max-width: 6rem;" disabled
                                readonly>
                            <div class="d-inline-flex align-items-center">
                                <button type="button" class="btn btn-light btn-sm rounded-end-4" aria-label="Delete"><i
                                        class="bi bi-x-lg pe-1"></i></button>
                            </div>
                        </div>
                        <!-- Add new requirement -->
                        <div class="d-inline-flex border border-3 border-primary-subtle rounded-5">
                            <input class="form-control form-control-sm rounded-start-4 text-center" type="text"
                                name="createRequirement" id="createRequirementAdd" placeholder="Necessity" value=""
                                aria-label="team requirement" style="max-width: 6rem;">
                            <div class="d-inline-flex align-items-center">
                                <button type="button" class="btn btn-light btn-sm rounded-end-4" aria-label="Add"><i
                                        class="bi bi-plus-lg pe-1"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- TODO: Game Date -->
                <div class="mt-3">
                    <div class="fs-4 fw-bold mb-1">Date<i class="bi bi-calendar-check mx-2"></i></div>
                    <!-- Date radio selector -->
                    <div class="m-2">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gameDateRadio" id="gameDateNow">
                            <label class="form-check-label" for="gameDateNow">
                                Now
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gameDateRadio" id="gameDateAfter"
                                checked>
                            <label class="form-check-label" for="gameDateAfter">
                                Long Term Effective
                            </label>
                        </div>
                    </div>
                    <!-- FIXME: Collapse using radio, From xx to xx -->
                    <div class="collapse show" id="gameDateCollapse">
                        <div class="d-inline-flex gap-2 p-2 border border-dark-subtle rounded-3 align-items-center">
                            <div class="row">
                                <label class="col-form-label col-form-label-sm col-sm-auto"
                                    for="gameDateStart">From:</label>
                                <div class="col-sm-auto">
                                    <input class="form-control form-control-sm" type="date" name="gameDatePeriod"
                                        id="gameDateStart">
                                </div>
                                <label class="col-form-label col-form-label-sm col-sm-auto"
                                    for="gameTimeStart">On:</label>
                                <div class="col-sm-auto">
                                    <input class="form-control form-control-sm" type="time" name="gameDatePeriod"
                                        id="gameTimeStart">
                                </div>
                            </div>
                            <div class="vr"></div>
                            <div class="row">
                                <label class="col-form-label col-form-label-sm col-sm-auto"
                                    for="gameDateEnd">To:</label>
                                <div class="col-sm-auto">
                                    <input class="form-control form-control-sm" type="date" name="gameDatePeriod"
                                        id="gameDateEnd">
                                </div>
                                <label class="col-form-label col-form-label-sm col-sm-auto"
                                    for="gameTimeEnd">On:</label>
                                <div class="col-sm-auto">
                                    <input class="form-control form-control-sm" type="time" name="gameDatePeriod"
                                        id="gameTimeEnd">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- TODO: Audio Chat Panel -->
                <div class="mt-3">
                    <div class="fs-4 fw-bold mb-1">Audio Chat<i class="bi bi-mic-fill mx-2"></i></div>
                    <div class="form-check form-switch m-2">
                        <input class="form-check-input" type="checkbox" role="switch" id="audioChatDecision" checked>
                        <label class="form-check-label" for="audioChatDecision">Need Voice Chatting</label>
                    </div>
                    <!-- FIXME: Collapse using radio, From xx to xx -->
                    <div class="collapse show" id="audioChatCollapse">
                        <div class="p-2 border border-dark-subtle rounded-3">
                            <div class="row ps-2">
                                <label class="col-form-label col-auto" for="createAudioChatName">Voice Chat
                                    Platform:</label>
                                <div class="col-auto">
                                    <input class="form-control" list="audioChatNames" id="createAudioChatName"
                                        placeholder="Type to search...">
                                </div>
                                <datalist id="audioChatNames">
                                    <option value="Discord" />
                                    <option value="KOOK" />
                                    <option value="WeChat" />
                                    <option value="YY" />
                                </datalist>
                            </div>
                            <hr style="margin: 0.5rem 0;">
                            <div class="row ps-2">
                                <label class="col-form-label col-auto" for="createAudioChatLink">Voice Chat
                                    Link:</label>
                                <div class="col-auto" style="width: 80%;">
                                    <input class="form-control" type="text" id="createAudioChatLink"
                                        placeholder="The voice chat room number or the link">
                                </div>
                            </div>
                        </div>
                        <!-- input text for detailed link -->
                    </div>
                </div>
                <!-- TODO: Other Description -->
                <div class="mt-3">
                    <label class="fs-4 fw-bold mb-1" for="createOtherText">Description<i
                            class="bi bi-card-text mx-2"></i></label>
                    <div class="form-floating">
                        <textarea class="form-control w-100 rounded-3" name="createNewPost" id="createOtherText"
                            placeholder="Other requirements or anything to say?"
                            style="resize: none; height: 120px;"></textarea>
                        <label for="createOtherText">Detailed Requirements</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-end">
                <div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? GameName { get; set; } = String.Empty;
}